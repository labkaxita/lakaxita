{% load static compress i18n %}

<!doctype html/>

html
    head
        title lakaxita{% block title %}{% endblock title %}
        {% compress css %}
        link
            - rel stylesheet
            - type text/x-sass
            - href {% static 'css/main.sass' %}
        {% endcompress %}
        {% compress js %}
        script
            - type text/javascript
            - src {% static 'js/jquery.min.js' %}
        script
            - type text/javascript
            - src {% static 'feedback/jquery.form.js' %}
        script
            - type text/javascript
            - src {% static 'feedback/main.js' %}
        script [type="text/javascript"]
            $(function(){
                feedback.init({
                    'button':$('a#feedback'),
                    'drop':$('#feedback_drop'),
                    'popup':$('#feedback_popup')
                });
            });
        {% block extra_js %}{% endblock extra_js %}
        {% endcompress %}

        {% block extra_headers %}{% endblock extra_headers %}

    body
        header
            div#logo
                img
                    - src {% static 'imgs/lakaxita.svg' %}
                    - alt lakaxita
                h1 lakaxita gaztetxea
            ul#license
                li
                    | {% trans 'edukia' %}
                    img
                li
                    | {% trans 'webgunea' %}
                    img

        nav
            ul
                li
                    | {% trans 'objetos perdidos' %}
                    img
                li
                    | {% trans 'eragileak' %}
                    img
                li
                    | {% trans 'galeria' %}
                    img
                li
                    | {% trans 'berriak' %}
                    img
                li
                    | {% trans 'kontaktua' %}
                    img
                


        section#content
            {% block content %}{% endblock content %}
