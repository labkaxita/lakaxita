{% load i18n %}

{% verbatim %}
    section.left
        {{#if image}}
        a 
            - href {{ image }}
            img.slide
                - src {{ thumbnail }}
        {{else}}
        img.slide
            - src {{ default_image }}
        {{/if}}

        p.hover 
            {% endverbatim %}
            | {% trans 'Date' %}: 
            {% verbatim %}
            {{ published }}


    section.right
        img.group
            - src {{ group.image }}
            - alt {{ group.name }}
        h3 
            | {{ title }}

        p.date
            | {{ event }}
            

        div.body
            {{{ text }}}

{% endverbatim %}
