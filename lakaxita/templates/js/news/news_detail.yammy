{% load i18n %}

{% verbatim %}
    section.left
        img.slide
            - src {{ image }}

        p.hover 
            | Date: {{ hover }}


    section.right
        img.group
            - src {{ group }}
            - alt {{ group_name }}
        h3 
            | {{ title }}

        p.date
            | {{ event }}
            

        div.body
            {{{ text }}}

{% endverbatim %}
