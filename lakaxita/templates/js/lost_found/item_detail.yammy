{% load i18n static %}

{% verbatim %}
    section.left
        img.slide
            - src {{ image }}

        p.date
            | Date of discovery: {{ date }}

        div#return
            img.icon
                - src {{ icon }}

            {{#if returned}}

            {% endverbatim %}
            | {% trans 'It has been already returned' %}
            {% verbatim %}

            {{else}}

            {% endverbatim %}
            | {% trans 'It has not been returned yet' %}
            {% verbatim %}

            {{/if}}

        {% endverbatim %}
        button.form 
            | {% trans 'It is mine!' %}
        {% verbatim %}

    section.right
        h3 
            | {{ title }}

        div.body
            {{{ description }}}

{% endverbatim %}
